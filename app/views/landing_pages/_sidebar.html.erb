<%= render 'advert' %>
<h4> <%= link_to "Pages by Industries", industries_path %></h4>
<ul id="tags"> 
  <% @industries.each do |lp| %>
    <li>
      <%= link_to(industry_path(lp), :class => "tag") do %>
        <span class="tag_name"><%= lp.name %> </span>
  			<span class="tag_count"><%= lp.landing_pages.not_future.count %> </span>
      <% end %>
		</li>
  <% end %>   
</ul>

<h4 class="clear"><%= link_to "Types of Landing Pages", landing_page_types_path %></h4>
<ul id="tags"> 
  <% @lpt.each do |lpt| %>
    <li>
      <%= link_to(landing_page_type_path(lpt), :class => "tag") do %>
        <span class="tag_name"><%= lpt.name %> </span>
  			<span class="tag_count"><%= lpt.landing_pages.not_future.count %> </span>
      <% end %>
		</li>
  <% end %>   
</ul>